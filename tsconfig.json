{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "./dist",
        "typeRoots": [
          "node_modules/@types"
        ],
        "lib": [
          "es2015",
          "es2016",
          "dom"
      ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
